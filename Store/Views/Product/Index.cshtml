@using Store.Models
@model List<Product>

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    @foreach (Product prd in Model)
    {
        <h3>@prd.Name</h3>
        <p>@prd.Price</p>
    }
</body>
</html>