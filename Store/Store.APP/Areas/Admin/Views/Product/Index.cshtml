@model IEnumerable<Product>
<h3>Product Index</h3>
<div class="text-center">
    <div class="display-6">Products</div>
    
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>
    
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Operations</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.Id">
                            <i class="fa fa-edit"></i>
                            Edit
                        </a>
                        <a class="btn btn-info" asp-action="get" asp-controller="Product" asp-area="" target="_blank" asp-route-id="@product.Id">
                            <i class="fa fa-search"></i>
                            Web
                        </a>
                    </div>
                </td>
            </tr>
            
        }
        </tbody>
    </table>
</div>