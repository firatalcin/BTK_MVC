@model IEnumerable<Product>
<h3>Product Index</h3>
<div class="text-center">
    <div class="display-6">
        Products
    </div>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Operations</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>.</td>
            </tr>
            
        }
        </tbody>
    </table>
</div>