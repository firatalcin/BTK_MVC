@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form action="" method="post" asp-action="Create" enctype="multipart/form-data">
    
    <div class="text-danger" asp-validation-summary="All"></div>
    
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories"></select>
    </div>
    
    <div class="form-group my-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Name">
    </div>
    
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" placeholder="Summary">
    </div>
    
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Price">
    </div>
    
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control" placeholder="Image">
    </div>

    <div class="form-group my-3">
        <button class="btn btn-primary" type="submit">
            <i class="fa fa-save"></i>
            Save
        </button>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fa fa-list"></i>
            Products
        </a>
    </div>
</form>